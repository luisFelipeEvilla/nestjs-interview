// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum role {
  ADMIN
  USER
}

enum payment_type {
  HOURLY
  SALARY
}

model enterprise {
  id          Int      @id @default(autoincrement())
  name        String
  users       user[]
  employees   employee[]
}


model user {
  id          Int      @id @default(autoincrement())
  name        String   
  email       String  @unique
  password    String
  enterprise  enterprise @relation(fields: [enterpriseId], references: [id])
  enterpriseId Int
  role        role    @default(USER)
}

model employee {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  enterprise  enterprise @relation(fields: [enterpriseId], references: [id])
  enterpriseId Int
  payment_type payment_type
}


